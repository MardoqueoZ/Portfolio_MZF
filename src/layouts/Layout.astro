---
import Hero from '../components/Hero.astro';
import Header from '../components/Header.astro';
import Project from '../components/Projects.astro'
import Tech from '../components/Tech.astro';
import '../styles/layouts.css';
import '@fontsource-variable/onest';
import AboutMe from '../components/AboutMe.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Mardoqueo Zotelo Florentín - Licenciado en Análisis de Sistemas Informáticos y Desarrollador Full Stack">
    <title>Portafolios</title>
</head>
<body>
    <div class="fixed top-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
    <Header />
    <div class="ml-1 mr-1 md:ml-[20em] md:mr-[20em]" id="inicio">
        <main>
            <section class= "flex flex-col md:flex-row px-2 text-center md:text-left mt-8 md:mt-20" >
                <Hero />
            </section>
            
            <section id="proyectos">
                <Project />
            </section>
            
            <section id="tecnologias">
                <Tech />
            </section>
            
            <section id="sobreMi">
                <AboutMe />
            </section>
            
            
            <footer class="text-white py-6">
                <div class="container mx-auto px-4">
                    <hr class="my-4 border-red-600">
                    <div class="text-center">
                        <p>&copy; 2024 Mardoqueo Zotelo Florentín. Todos los derechos reservados.</p>
                    </div>
                </div>
            </footer>
            
        </main>
    </div>
    

</body>
</html>